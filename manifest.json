{
	"manifest_version": 2,

	"name": "Simple Pomodoro",
	"description": "A chrome extension for managing time using Pomodoro Technique.",
	"version": "0.1",

	"browser_action": {
		"default_icon": "resources/main-icon.png",
		"default_title": "Simple Pomodoro Extension.",
		"default_popup": "src/main.html"
	},

	"background":{
		"scripts": ["lib/jquery.js", "lib/flipclock.min.js", "src/background.js"],
		"persistent": true
	},

	"permissions":[
		"storage",
		"notifications",
		"contextMenus",
		"webRequest",
		"tabs",
		"management"
	]


}